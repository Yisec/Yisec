
{
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "plugins": [
        "standard"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "no-func-assign": "off",
        "no-duplicate-imports": ["error", { "includeExports": true }],
        "semi": 0
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    }
}
